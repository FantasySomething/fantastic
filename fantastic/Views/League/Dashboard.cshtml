
@{
    ViewData["Title"] = "New League Registration";
}

@using fantastic.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model fantastic.Models.LeagueViewModels.IndexBundle

<form asp-controller="Draft" asp-action="create" method="POST">
    <h5>
        <label asp-for="create.Name"></label>
        <input asp-for="create.Name" />
        <span asp-validation-for="create.Name"></span>
    </h5>
    <h5>
        <label asp-for="create.Start"></label>
        <input asp-for="create.Start" />
        <span asp-validation-for="create.Start"></span>
    </h5>
    <h5>
        <label asp-for="create.End"></label>
        <input asp-for="create.End" />
        <span asp-validation-for="create.End"></span>
    </h5>
    <h5>
        <label asp-for="create.Duration"></label>
        <input asp-for="create.Duration" />
        <span asp-validation-for="create.Duration"></span>
    </h5>
    <button type="submit">Create League</button>
</form>