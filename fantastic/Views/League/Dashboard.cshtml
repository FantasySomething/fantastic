
@{
    ViewData["Title"] = "Dashboard";
}
@using fantastic.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model fantastic.Models.LeagueViewModels.IndexViewModel

<h2>League Dashboard</h2>

<form asp-controller="League" asp-action="create" method="POST">
    <h5>
        <label asp-for="newLeague.Name"></label>
        <input asp-for="newLeague.Name" />
        <span asp-validation-for="newLeague.Name"></span>
    </h5>
    <h5>
        <label asp-for="newLeague.Start"></label>
        <input asp-for="newLeague.Start" />
        <span asp-validation-for="newLeague.Start"></span>
    </h5>
    <h5>
        <label asp-for="newLeague.End"></label>
        <input asp-for="newLeague.End" />
        <span asp-validation-for="newLeague.End"></span>
    </h5>
    <h5>
        <label asp-for="newLeague.Duration"></label>
        <input asp-for="newLeague.Duration" />
        <span asp-validation-for="newLeague.Duration"></span>
    </h5>
    <button type="submit">Create League</button>
</form>