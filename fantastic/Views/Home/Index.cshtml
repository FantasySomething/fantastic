@{
    ViewData["Title"] = "Home Page";
}
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@using fantastic.Models
@model fantastic.Models.DashboardViewModel

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/pexels-photo-139762.jpeg" alt="Baseball" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="~/images/ice-hockey-goalie-goal-sport-39016.jpeg" alt="Hockey" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="~/images/sport-united-states-of-america-ball-jump.jpg" alt="Basketball" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="~/images/american-football-football-defense-tackle-159574.jpeg" alt="Football" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
@if (SignInManager.IsSignedIn(User))
{
    <div class="row">
        <div class="col-md-3">
            @Html.ActionLink("Start a League", "Dashboard", "League")
        </div>
        <div class="col-md-3">
            <h2>My Leagues</h2>
            <ul>
                @foreach(var league in Model.myLeagues)
                {
                    <li><a href="/league/details/@league.Id">@league.Name</a></li>

                }
            </ul>
        </div>
        <div class="col-md-3">
            <h2>My Teams</h2>
            <ul>
                @foreach(var team in Model.myTeams)
                {
                    <li><a href="/team/display/@team.Id">@team.Name</a></li>

                }
            </ul>
        </div>
        <div class="col-md-3">
            <h2>Open Leagues</h2>
            <ul>
                @foreach(var league in Model.aLeagues)
                {
                    <li><a href="/league/details/@league.Id">@league.Name</a></li>

                }
            </ul>
        </div>
    </div>
}
